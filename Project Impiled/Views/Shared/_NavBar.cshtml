    }

    @if (ViewBag.Title == "Support Us")
    {
        <link href="~/Content/Css/support.css" rel="stylesheet" />
    }


    <title>Impiled @ViewBag.Title </title>
</head>
<body onload="Read()">

    <div class="spinner-wrapper">
        <div class="spinner">
            <div class="double-bounce1"></div>
            <div class="double-bounce2"></div>
        </div>
    </div>

    <div class="container-fluid">
        <nav>
            <input type="checkbox" id="nav" class="hidden">
            <label for="nav" class="nav-btn"><i></i><i></i><i></i></label>
            <div class="logo">
                <a href="@Url.Action("Home")">
                    <img src="~/Content/Img/Group 1.png" width="180" alt="" srcset="" />
                </a>
            </div>
            <div class="nav-wrapper">
                <ul>
                    <li><a href="@Url.Action("Students")">Students</a></li>
                    <li><a href="@Url.Action("Rewards")">Rewards</a></li>
                    <li><a href="@Url.Action("MeetTheTeam")">Meet the Team</a></li>
                    <li><a href="@Url.Action("Support")">Support Us</a></li>
                    <li><a href="@Url.Action("Login","Admin")">Admin</a></li>
                </ul>
            </div>
        </nav>
        <br>
        <br>
        <br>
        @RenderBody()
