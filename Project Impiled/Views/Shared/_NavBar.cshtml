    <link href="~/Content/Css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Css/navbar.css" rel="stylesheet" />
    <link href="~/Content/Css/preloader.css" rel="stylesheet" />

    <!-- For homepage css-->
    @if (ViewBag.Title == "Home")
    {
        <link href="~/Content/Css/home.css" rel="stylesheet" />
    }

    @if (ViewBag.Title == "Students")
    {
        <link href="~/Content/Css/newstud.css" rel="stylesheet" />
    }

    @if (ViewBag.Title == "Rewards")
