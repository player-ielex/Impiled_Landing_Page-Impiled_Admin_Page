<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Icons -->
    <link href="~/Content/Css/nucleo.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css">

    <!-- DataTables Css-->
    @if (ViewBag.Title == "Subjects" || ViewBag.Title == "AllTeachers" || ViewBag.Title == "AllStudents" || ViewBag.Title == "Sections" || ViewBag.Title == "ReCategory" || ViewBag.Title == "AllRewards" || ViewBag.Title == "GradeLevel" || ViewBag.Title == "AllTeachers" || ViewBag.Title == "AssignStudents" || ViewBag.Title == "AllAnnouncement" || ViewBag.Title=="PendingRewards" || ViewBag.Title == "CompleteRewards")
    {
        <link href="~/Content/Css/Datatable/dataTables.bootstrap4.min.css" rel="stylesheet" />
        <link href="~/Content/Css/Datatable/select.bootstrap4.min.css" rel="stylesheet" />
    }

    @if (ViewBag.Title == "CUStudents" || ViewBag.Title == "AllStudents" || ViewBag.Title == "CUTeachers" || ViewBag.Title == "AllTeachers")
    {
        <link href="~/Content/Css/profile-picture.css" rel="stylesheet" />
    }

    @if (ViewBag.Title == "AddRewards" || ViewBag.Title == "AllRewards" || ViewBag.Title == "Features" || ViewBag.Title == "AddAnnouncement" || ViewBag.Title=="AllAnnouncement")
    {
        <link href="~/Content/Css/rewardspic.css" rel="stylesheet" />
    }

    <!-- Bootstrap Css -->
    <link href="~/Content/Css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animate Css -->
    <link href="~/Content/Css/animate.css" rel="stylesheet" />

    <!-- Argon Css -->
    <link href="~/Content/Css/bootstrap-ui.css" rel="stylesheet" />

    <!-- Jquery Fancy Box Css-->
    <link href="~/Content/Css/jquery.fancybox.min.css" rel="stylesheet" />

    <!--Sweet Alert Css-->
    <link href="~/Content/Css/sweetalert.min.css" rel="stylesheet" />

    <!-- Preloader Css -->
    <link href="~/Content/Css/preloader.css" rel="stylesheet" />

    <!-- Title Page -->
    <title>@ViewBag.Title - My ASP.NET Application</title>

</head>
<body onload="Read()">

    <div class="spinner-wrapper">
        <div class="spinner">
            <div class="double-bounce1"></div>
            <div class="double-bounce2"></div>
        </div>
    </div>


    <!-- Sidenav -->
    <nav class="sidenav navbar navbar-vertical fixed-left navbar-expand-xs navbar-light bg-white" id="sidenav-main">
        <div class="scrollbar-inner">
            <!-- Brand -->
            <div class="sidenav-header d-flex align-items-center">
                <a class="navbar-brand" href="../../pages/dashboards/dashboard.html">
                    Impiled Dash
                </a>
                <div class="ml-auto">
                    <!-- Sidenav toggler -->
                    <div class="sidenav-toggler d-none d-xl-block" data-action="sidenav-unpin" data-target="#sidenav-main">
                        <div class="sidenav-toggler-inner">
                            <i class="sidenav-toggler-line"></i>
                            <i class="sidenav-toggler-line"></i>
                            <i class="sidenav-toggler-line"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="navbar-inner">
                <!-- Collapse -->
                <div class="collapse navbar-collapse" id="sidenav-collapse-main">
                    <!-- Nav items -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link  @if (ViewBag.Title == "AllAnnouncement" || ViewBag.Title == "AddAnnouncement") { @Html.Encode("active")}" href="#announ-components" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="navbar-components">
                                <i class="ni ni-ui-04 text-info"></i>
                                <span class="nav-link-text">Announcement</span>
                            </a>
                            <div class="collapse" id="announ-components">
                                <ul class="nav nav-sm flex-column">
                                    <li class="nav-item">
                                        <a href="@Url.Action("AllAnnouncement")" class="nav-link  @if (ViewBag.Title == "AllAnnouncement") { @Html.Encode("active")}">All Announcement</a>
                                    </li>

                                    <li class="nav-item">
                                        <a href="@Url.Action("AddAnnouncement")" class="nav-link  @if (ViewBag.Title == "AddAnnouncement") { @Html.Encode("active")}">Add Announcement</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  @if (ViewBag.Title == "AllStudents" || ViewBag.Title == "CUStudents") { @Html.Encode("active")}" href="#navbar-components" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="navbar-components">
                                <i class="ni ni-ui-04 text-info"></i>
                                <span class="nav-link-text">Students</span>
                            </a>
                            <div class="collapse" id="navbar-components">
                                <ul class="nav nav-sm flex-column">
                                    <li class="nav-item">
                                        <a href="@Url.Action("AllStudents")" class="nav-link  @if (ViewBag.Title == "AllStudents") { @Html.Encode("active")}">All Students</a>
                                    </li>

                                    <li class="nav-item">
                                        <a href="@Url.Action("CUStudents")" class="nav-link  @if (ViewBag.Title == "CUStudents") { @Html.Encode("active")}">Add Students</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  @if (ViewBag.Title == "ReCategory" || ViewBag.Title == "Rewards") { @Html.Encode("active")}" href="#navbar-forms" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="navbar-forms">
                                <i class="ni ni-single-copy-04 text-pink"></i>
                                <span class="nav-link-text">Rewards</span>
                            </a>
                            <div class="collapse" id="navbar-forms">
                                <ul class="nav nav-sm flex-column">
                                    <li class="nav-item">
                                        <a href="@Url.Action("ReCategory")" class="nav-link @if (ViewBag.Title == "ReCategory") { @Html.Encode("active")}">Add Rewards Category</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Rewards")" class="nav-link @if (ViewBag.Title == "AddRewards") { @Html.Encode("active")}">Add Rewards</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("AllRewards")" class="nav-link @if (ViewBag.Title == "AllRewards") { @Html.Encode("active")}">All Rewards</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @if (ViewBag.Title == "CompleteRewards" || ViewBag.Title == "PendingRewards") { @Html.Encode("active")}" href="#trans-forms" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="navbar-forms">
                                <i class="ni ni-single-copy-04 text-pink"></i>
                                <span class="nav-link-text">Transaction</span>
                            </a>
                            <div class="collapse" id="trans-forms">
                                <ul class="nav nav-sm flex-column">
                                    <li class="nav-item">
                                        <a href="@Url.Action("PendingRewards")" class="nav-link @if (ViewBag.Title == "PendingRewards") { @Html.Encode("active")}">Pending</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("CompleteRewards")" class="nav-link @if (ViewBag.Title == "CompleteRewards") { @Html.Encode("active")}">Complete</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link  @if (ViewBag.Title == "Sections") { @Html.Encode("active"); }" href="@Url.Action("Sections", "Dashboard")" role="button" aria-expanded="false">
                                <i class="ni ni-align-left-2 text-default"></i>
                                <span class="nav-link-text">Section</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @if (ViewBag.Title == "GradeLevel") { @Html.Encode("active"); }" href="@Url.Action("GradeLevel", "Dashboard")" role="button" aria-expanded="false">
                                <i class="ni ni-books text-teal"></i>
                                <span class="nav-link-text">Grade Level</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>


    <div class="main-content" id="panel">
        <!-- Topnav -->
        <nav class="navbar navbar-top navbar-expand navbar-dark bg-default border-bottom">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Navbar links -->
                    <ul class="navbar-nav align-items-center ml-md-auto">
                        <li class="nav-item d-xl-none">
                            <!-- Sidenav toggler -->
                            <div class="pr-3 sidenav-toggler sidenav-toggler-dark" data-action="sidenav-pin" data-target="#sidenav-main">
                                <div class="sidenav-toggler-inner">
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <ul class="navbar-nav align-items-center ml-auto ml-md-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link pr-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <div class="media align-items-center">
                                    <a href="@Url.Action("Logout", "Admin")">
                                        <span class="text-white">Logout</span>
                                    </a>


                                </div>
                            </a>

                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        @RenderBody()

    </div>


    <!-- Vendors Js -->
    <script src="~/Content/Script/jquery.min.js"></script>
    <script src="~/Content/Script/bootstrap.min.js"></script>
    <script src="~/Content/Script/js.cookie.js"></script>
    <script src="~/Content/Script/jquery.scrollbar.min.js"></script>
    <script src="~/Content/Script/jquery-scrollLock.min.js"></script>
    <script src="~/Content/Script/jquery-sidenav.min.js"></script>
    <script src="~/Content/Script/bootstrap-notify.min.js"></script>
    <script src="~/Content/Script/sweetalert.min.js"></script>

    <!-- DataTable Js-->
    @if (ViewBag.Title == "Subjects" || ViewBag.Title == "AllTeachers" || ViewBag.Title == "AllStudents" || ViewBag.Title == "Sections" || ViewBag.Title == "ReCategory" || ViewBag.Title == "AllRewards" || ViewBag.Title == "GradeLevel" || ViewBag.Title == "AllTeachers" || ViewBag.Title == "AssignStudents" || ViewBag.Title == "AllAnnouncement" || ViewBag.Title == "PendingRewards" || ViewBag.Title == "CompleteRewards")
    {
        <script src="~/Content/Script/Datatables/jquery.dataTables.min.js"></script>
        <script src="~/Content/Script/Datatables/dataTables.bootstrap4.min.js"></script>
        <script src="~/Content/Script/Datatables/dataTables.buttons.min.js"></script>
        <script src="~/Content/Script/Datatables/buttons.bootstrap4.min.js"></script>
        <script src="~/Content/Script/Datatables/dataTables.select.min.js"></script>
    }

    <!-- Jquery Modal Js -->
    <script src="~/Content/Script/jquery.fancybox.min.js"></script>

    <script src="https://www.gstatic.com/firebasejs/7.9.3/firebase.js"></script>


    <script>
        //Your web app's Firebase configuration
        var firebaseConfig = {
            apiKey: "AIzaSyCRLjeNAHL36BjWjnWQqci9WdKMbTXWqeY",
            authDomain: "impiled.firebaseapp.com",
