        };
        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
    </script>

    <script>
        preloaderFadeOutTime = 500;
        function hidePreloader() {
            var preloader = $('.spinner-wrapper');
            preloader.fadeOut(preloaderFadeOutTime);
        }

        function showPreloader() {
            var preloader = $('.spinner-wrapper');
            preloader.fadeIn();
        }
    </script>


    @RenderSection("tab", false);


</body>
</html>